{
    "dataRoles": [
        {
            "name": "category",
            "kind": "Grouping",
            "displayName": "Renglones"
        },
        {
            "name": "values",
            "kind": "Measure",
            "displayName": "Columnas"
        },
        {
            "name": "sparklineValues",
            "kind": "Measure",
            "displayName": "Columnas Sparkline"
        },
        {
            "name": "xAxis",
            "kind": "Grouping",
            "displayName": "Eje X"
        }
    ],
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "category": { "max": 1 },
                    "values": { "min": 0 },
                    "sparklineValues": { "min": 0 },
                    "xAxis": { "max": 1 }
                }
            ],
            "categorical": {
                "categories": {
                    "for": { "in": "category" },
                    "dataReductionAlgorithm": { "top": { "count": 1000 } }
                },
                "values": {
                    "group": {
                        "by": "xAxis",
                        "select": [
                            { "for": { "in": "values" } },
                            { "for": { "in": "sparklineValues" } }
                        ],
                        "dataReductionAlgorithm": { "top": { "count": 1000 } }
                    }
                }
            }
        }
    ],
    "objects": {
        "general": {
            "displayName": "General",
            "properties": {
                "textSize": {
                    "displayName": "Tamaño de texto",
                    "type": {
                        "formatting": {
                            "fontSize": true
                        }
                    }
                },
                "alternateRowColor": {
                    "displayName": "Color de filas alternadas",
                    "type": {
                        "bool": true
                    }
                }
            }
        },
        "sparklineColumn": {
            "displayName": "Minigráfico",
            "properties": {
                "chartType": {
                    "displayName": "Tipo de gráfico",
                    "type": {
                        "enumeration": [
                            {
                                "value": "line",
                                "displayName": "Línea"
                            },
                            {
                                "value": "bar",
                                "displayName": "Barras"
                            },
                            {
                                "value": "area",
                                "displayName": "Área"
                            },
                            {
                                "value": "pie",
                                "displayName": "Circular"
                            },
                            {
                                "value": "donut",
                                "displayName": "Anillo"
                            }
                        ]
                    }
                },
                "color": {
                    "displayName": "Color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "lineWidth": {
                    "displayName": "Grosor de línea",
                    "type": {
                        "numeric": true
                    }
                }
            }
        }
    },
    "privileges": []
}
